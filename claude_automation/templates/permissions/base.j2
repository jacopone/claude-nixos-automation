{# Base permissions template for generic projects #}
{# Boris Cherny style: broad patterns, not specific commands #}
{
  "permissions": {
    "allow": [
      {# === VERSION CONTROL === #}
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(lazygit:*)",

      {# === MODERN CLI TOOLS === #}
      {% for tool in modern_cli_tools %}
      "Bash({{ tool }}:*)",
      {% endfor %}

      {# === STANDARD UNIX === #}
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(chmod:*)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(file:*)",
      "Bash(test:*)",
      "Bash(tee:*)",

      {# === FILE OPERATIONS === #}
      "Read({{ project_path }}/**)",
      "Read(/home/{{ username }}/.claude/**)",
      "Read(/tmp/**)",
      "Write({{ project_path }}/**)",
      "Edit({{ project_path }}/**)",

      {# === WEB ACCESS === #}
      "WebFetch",
      "WebSearch"
    ],

    "deny": [
      {# Security-critical denials #}
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(git push --force:*)",

      {# Sensitive paths - never allow writes #}
      {% for path in sensitive_paths %}
      "Write({{ path }}/**)",
      "Edit({{ path }}/**)",
      {% endfor %}

      {# System configuration #}
      "Write(/home/{{ username }}/.ssh/**)",
      "Write(/home/{{ username }}/.config/**)",
      "Edit(/home/{{ username }}/.ssh/**)",
      "Edit(/home/{{ username }}/.config/**)"
    ],

    "ask": [
      {# Operations that should require confirmation #}
      "Bash(git push:*)",
      "Bash(./rebuild-nixos:*)",
      "Bash(nixos-rebuild:*)"
    ]
  },

  "hooks": {}
}

{# Base permissions template for generic projects #}
{
  "permissions": {
    "allow": [
      {# Git operations - safe and frequently needed #}
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git restore:*)",
      "Bash(git config:*)",

      {# Modern CLI tools (always safe) #}
      {% for tool in modern_cli_tools %}
      "Bash({{ tool }}:*)",
      {% endfor %}

      {# File reading permissions #}
      "Read({{ project_path }}/**)",
      "Read(/home/{{ username }}/.claude/**)",
      "Read(/tmp/**)",

      {# File writing permissions (project-specific) #}
      "Write({{ project_path }}/src/**)",
      "Write({{ project_path }}/docs/**)",
      "Write({{ project_path }}/*.md)",

      {# File editing permissions (project-specific) #}
      "Edit({{ project_path }}/src/**)",
      "Edit({{ project_path }}/docs/**)",
      "Edit({{ project_path }}/*.md)",

      {# Web access for documentation #}
      "WebFetch(domain:docs.claude.com)",
      "WebFetch(domain:github.com)",
      "WebSearch",

      {# Shell utilities #}
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(test:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(chmod:*)",
      "Bash(tee:*)"
    ],

    "deny": [
      {# Security-critical denials #}
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(git push --force:*)",

      {# Sensitive paths - never allow writes #}
      {% for path in sensitive_paths %}
      "Write({{ path }}/**)",
      "Edit({{ path }}/**)",
      {% endfor %}

      {# System configuration #}
      "Write(/home/{{ username }}/.ssh/**)",
      "Write(/home/{{ username }}/.config/**)",
      "Edit(/home/{{ username }}/.ssh/**)",
      "Edit(/home/{{ username }}/.config/**)"
    ],

    "ask": [
      {# Operations that should require confirmation #}
      "Bash(git push:*)",
      "Bash(./rebuild-nixos:*)",
      "Bash(nixos-rebuild:*)"
    ]
  },

  "hooks": {}
}

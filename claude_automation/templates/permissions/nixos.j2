{# NixOS configuration project permissions #}
{# Boris Cherny style: broad patterns, not specific commands #}
{
  "permissions": {
    "allow": [
      {# === VERSION CONTROL === #}
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(lazygit:*)",

      {# === NIX ECOSYSTEM === #}
      "Bash(nix:*)",
      "Bash(nix-build:*)",
      "Bash(nix-shell:*)",
      "Bash(nix-store:*)",
      "Bash(nix-env:*)",
      "Bash(nix-instantiate:*)",
      "Bash(nix-locate:*)",
      "Bash(nixpkgs-fmt:*)",
      "Bash(nixos-option:*)",
      "Bash(alejandra:*)",
      "Bash(statix:*)",
      "Bash(nom:*)",
      "Bash(nvd:*)",
      "Bash(devenv:*)",
      "Bash(direnv:*)",

      {# === MODERN CLI TOOLS === #}
      {% for tool in modern_cli_tools %}
      "Bash({{ tool }}:*)",
      {% endfor %}

      {# === STANDARD UNIX === #}
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(chmod:*)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(file:*)",
      "Bash(test:*)",
      "Bash(tee:*)",

      {# === FILE OPERATIONS === #}
      "Read({{ project_path }}/**)",
      "Read(/home/{{ username }}/.claude/**)",
      "Read(/home/{{ username }}/nixos-config/**)",
      "Read(/home/{{ username }}/claude-nixos-automation/**)",
      "Read(/etc/nixos/**)",
      "Read(/tmp/**)",
      "Write({{ project_path }}/**)",
      "Edit({{ project_path }}/**)",

      {# === WEB ACCESS === #}
      "WebFetch",
      "WebFetch(domain:nixos.org)",
      "WebFetch(domain:nixos.wiki)",
      "WebFetch(domain:nix.dev)",
      "WebFetch(domain:github.com)",
      "WebSearch",

      {# === MCP TOOLS === #}
      "mcp__nixos__*",
      "mcp__memory__*",
      "mcp__playwright__*"
    ],

    "deny": [
      {# Security-critical denials #}
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(git push --force:*)",

      {# Nix operations that require sudo #}
      "Bash(nixos-rebuild:*)",
      "Bash(nix-collect-garbage -d:*)",
      "Bash(nix-channel:*)",

      {# Sensitive paths #}
      {% for path in sensitive_paths %}
      "Write({{ path }}/**)",
      "Edit({{ path }}/**)",
      {% endfor %}

      {# System configuration - only through rebuild script #}
      "Write(/etc/nixos/**)",
      "Edit(/etc/nixos/**)",
      "Write(/home/{{ username }}/.ssh/**)",
      "Write(/home/{{ username }}/.config/**)",
      "Edit(/home/{{ username }}/.ssh/**)",
      "Edit(/home/{{ username }}/.config/**)",

      {# Build artifacts #}
      "Write({{ project_path }}/result)",
      "Write({{ project_path }}/result-*/**)"
    ],

    "ask": [
      {# Operations requiring confirmation #}
      "Bash(git push:*)",
      "Bash(./rebuild-nixos:*)",
      "Bash(nix flake update:*)",
      "Bash(nix build:*)"
    ]
  },

  "hooks": {}
}

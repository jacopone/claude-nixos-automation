{# NixOS configuration project permissions #}
{
  "permissions": {
    "allow": [
      {# Git operations #}
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git restore:*)",
      "Bash(git config:*)",

      {# Nix commands (safe read-only operations) #}
      "Bash(nix flake check:*)",
      "Bash(nix flake show:*)",
      "Bash(nix flake metadata:*)",
      "Bash(nix search:*)",
      "Bash(nix eval:*)",
      "Bash(nix-instantiate:*)",
      "Bash(nix show-derivation:*)",
      "Bash(nix path-info:*)",
      "Bash(nix-store:*)",
      "Bash(nix run:*)",
      "Bash(nix develop:*)",
      "Bash(nix shell:*)",

      {# DevEnv commands #}
      {% if 'devenv' in quality_tools %}
      "Bash(devenv shell:*)",
      "Bash(devenv up:*)",
      "Bash(devenv test:*)",
      {% endif %}

      {# Quality tools for Nix files #}
      {% if 'nixpkgs-fmt' in quality_tools %}
      "Bash(nixpkgs-fmt:*)",
      {% endif %}
      {% if 'alejandra' in quality_tools %}
      "Bash(alejandra:*)",
      {% endif %}
      {% if 'statix' in quality_tools %}
      "Bash(statix:*)",
      {% endif %}

      {# Modern CLI tools #}
      {% for tool in modern_cli_tools %}
      "Bash({{ tool }}:*)",
      {% endfor %}

      {# File reading permissions #}
      "Read({{ project_path }}/**)",
      "Read(/home/{{ username }}/.claude/**)",
      "Read(/home/{{ username }}/nixos-config/**)",
      "Read(/home/{{ username }}/claude-nixos-automation/**)",
      "Read(/etc/nixos/**)",
      "Read(/tmp/**)",

      {# File writing permissions #}
      "Write({{ project_path }}/modules/**)",
      "Write({{ project_path }}/hosts/**)",
      "Write({{ project_path }}/profiles/**)",
      "Write({{ project_path }}/users/**)",
      "Write({{ project_path }}/docs/**)",
      "Write({{ project_path }}/*.md)",
      "Write({{ project_path }}/*.nix)",
      "Write({{ project_path }}/flake.nix)",
      "Write({{ project_path }}/flake.lock)",

      {# File editing permissions #}
      "Edit({{ project_path }}/modules/**)",
      "Edit({{ project_path }}/hosts/**)",
      "Edit({{ project_path }}/profiles/**)",
      "Edit({{ project_path }}/users/**)",
      "Edit({{ project_path }}/docs/**)",
      "Edit({{ project_path }}/*.md)",
      "Edit({{ project_path }}/*.nix)",
      "Edit({{ project_path }}/flake.nix)",

      {# Web access #}
      "WebFetch(domain:docs.claude.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:nixos.org)",
      "WebFetch(domain:nixos.wiki)",
      "WebFetch(domain:nix.dev)",
      "WebSearch",

      {# Shell utilities #}
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(test:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(chmod:*)",
      "Bash(tee:*)"
    ],

    "deny": [
      {# Security-critical denials #}
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(git push --force:*)",

      {# Nix operations that require sudo #}
      "Bash(nixos-rebuild:*)",
      "Bash(nix-collect-garbage -d:*)",
      "Bash(nix-channel:*)",

      {# Sensitive paths #}
      {% for path in sensitive_paths %}
      "Write({{ path }}/**)",
      "Edit({{ path }}/**)",
      {% endfor %}

      {# System configuration - only through rebuild script #}
      "Write(/etc/nixos/**)",
      "Edit(/etc/nixos/**)",
      "Write(/home/{{ username }}/.ssh/**)",
      "Write(/home/{{ username }}/.config/**)",
      "Edit(/home/{{ username }}/.ssh/**)",
      "Edit(/home/{{ username }}/.config/**)",

      {# Build artifacts #}
      "Write({{ project_path }}/result)",
      "Write({{ project_path }}/result-*/**)"
    ],

    "ask": [
      {# Operations requiring confirmation #}
      "Bash(git push:*)",
      "Bash(./rebuild-nixos:*)",
      "Bash(nix flake update:*)",
      "Bash(nix build:*)"
    ]
  },

  "hooks": {}
}
